<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script type="text/javascript" src="/Scripts/jquery-1.5.1.min.js"></script>
    </head>
    <body>
        <div class="page">
            <header>
